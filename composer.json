{
    "name": "dholloran/press-cli",
    "description": "A simple configurable opinionated WordPress installer.",
    "keywords": ["WordPress", "install"],
    "homepage": "https://pressc.li",
    "license": "GPL-3.0",
    "type": "project",
    "authors" : [
        {
            "name": "Dan Holloran",
            "email": "dtholloran@gmail.com",
            "homepage":"https://danholloran.me",
            "role": "Developer"
        }
    ],
    "require": {
        "symfony/console": "^3.3",
        "tightenco/collect": "^5.4"
    },
    "support": {
        "issues": "https://github.com/DHolloran/press-cli/issues",
        "docs": "https://pressc.li/docs/",
        "source": "https://github.com/DHolloran/press-cli"
    },
    "bin": [
        "press"
    ],
    "autoload": {
        "psr-4": {
            "PressCLI\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "post-package-install": [
        "php press wp-cli:install"
    ],
    "post-package-update": [
        "php press wp-cli:update"
    ],
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "fzaninotto/faker": "^1.6"
    }
}
